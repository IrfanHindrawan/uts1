<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
        <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="silahkan dijawab"
         />
        
            <TextView
        android:id="@+id/bdtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="berapa kah luas persegi panjang jika panjang nya 10 cm dan lebar nya 5 "
        android:layout_below="@+id/intro"
        />
                <EditText 
        android:id="@+id/etbdtr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Jawaban"
        android:layout_below="@+id/bdtr"
        />
                    <Button
        android:id="@+id/btnbdtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_below="@+id/etbdtr"
        />
    

</RelativeLayout>
